<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE form SYSTEM "form.dtd">

<form action="server/contact/form.php" method="POST" enctype="application/x-www-form-urlencoded">
    <field required="true">
        <name>name</name>
        <type>text</type>
        <label lang="en-GB">Name:</label>
        <label lang="es-ES">Nombre:</label>
        <label lang="ca-ES">Nom:</label>
    </field>
    <field required="true">
        <name>email</name>
        <type>email</type>
        <label lang="en-GB">E-mail</label>
        <label lang="es-ES">Correo Electrónico:</label>
        <label lang="ca-ES">Correu Electrònic:</label>
    </field>
    <field required="true">
        <name>subject</name>
        <type>text</type>
        <label lang="en-GB">Subject:</label>
        <label lang="es-ES">Asunto:</label>
        <label lang="ca-ES">Assumpte:</label>
    </field>
    <field required="true">
